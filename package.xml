    </file>
    <file name="Parser.out" role="data"/>
    <file name="Parser.php" role="php">
     <tasks:replace from="@package_version@" to="version" type="package-info" />
    </file>
    <file name="Parser.y" role="php">
     <tasks:replace from="@package_version@" to="version" type="package-info" />
    </file>
   </dir> <!-- /LexerGenerator -->
   <file name="LexerGenerator.php" role="php">
    <tasks:replace from="@package_version@" to="version" type="package-info" />
   </file>
   <file name="LICENSE.txt" role="doc"/>
   <file name="plex" role="script" baseinstalldir="">
    <tasks:replace from="@php-bin@" to="php_bin" type="pear-config"/>
    <tasks:replace from="@php-dir@" to="php_dir" type="pear-config"/>
    <tasks:unixeol/>
   </file>
   <file name="plex.bat" role="script" baseinstalldir="">
